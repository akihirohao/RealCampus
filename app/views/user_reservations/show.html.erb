<h1>Have a nice day!!!</h1>

  <%= @time %>

<!-- 指定されたstudentのnicknameとavatarを表示する -->
<%= @user.nickname %>
<%= @user.avatar %>

<!-- 後で集合場所の写真をリンクに貼る -->
<p>集合場所・地図</p>

<h2>案内してくれる学生とチャットしてみよう！</h2>
<h2>チャット投稿フォーム</h2>
    <!-- コメント機能をここに コメントできるのは二人だけ -->
    <!-- 背景はキャンパスの写真 -->
           <%= form_for [@chat, @chat_reservation] do |f| %>
              <div style="margin: 8px 0">
                <%= f.text_area :text, placeholder: '挨拶をしよう！', style: 'width: 100%;height: 300px;' %>
              </div>
              <div class="row">
                <div class="col10 push1">
                  <%= button_tag type: "submit", class: "btn btn--block" do %>
                    投稿する<i class="icon-arrow-right"></i>
           <% end %>


<h2>チャット一覧</h2>
              <% @reservation.chats.each do |chat| %>
                  <li style="border-bottom: dotted 1px">
                    <div class="thumbnail__caption">
                      <h3 class="text-xsmall text-overflow" title="<%= chat.user.nickname %>">
                        <%= chat.user.nickname %>
                      </h3>
                      <p>
                        <%= chat.text %>
                      </p>
                    </div>
                  </li>
                <% end %>